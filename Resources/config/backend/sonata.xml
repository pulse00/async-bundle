<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service class="Dubture\AsyncBundle\Sonata\SonataBackend" id="dubture.async.backend.sonata">
            <argument id="sonata.notification.backend" type="service"/>
        </service>

        <service class="Dubture\AsyncBundle\Sonata\SonataConsumer" id="dubture.async.sonataconsumer">
            <argument id="service_container" type="service"/>
            <tag name="sonata.notification.consumer" type="upload_picture"/>
        </service>

    </services>

</container>
